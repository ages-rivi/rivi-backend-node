generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url = env("MONGO_URI")
}

model Tag {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  nome String @unique
  descricao String
}

model Projeto {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  titulo String
  descricao String
  estado String
  tags String[]
  link String
  pesquisadoresIds String[] @db.ObjectId
  pesquisadores Pesquisador[] @relation(fields: [pesquisadoresIds], references: [id])
}

model Pesquisador {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  nome String
  email String @unique
  descricao String
  afiliacao String
  tag String[]
  foto String
  contatos Contato[]
  projetosIds String[] @db.ObjectId
  projetos Projeto[] @relation(fields: [projetosIds], references: [id])
  artigosIds String[] @db.ObjectId
  artigos Article[] @relation(fields: [artigosIds], references: [id])
}

model Article {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  description String
  category String
  tags String[]
  doi String
  abstract String
  location String
  date String
  pdf_link String
  membersIds String[] @db.ObjectId
  pesquisadores Pesquisador[] @relation(fields: [membersIds], references: [id])
}

type Contato {
  nome String
  link String
}
